@namespace ExampleProject.Api.Components.Shared

@if (!string.IsNullOrEmpty(Message))
{
    <div class="error-message" role="alert">
        <span class="error-message__icon" aria-hidden="true">!</span>
        <p class="error-message__text">@Message</p>
        @if (ShowRetry && OnRetry.HasDelegate)
        {
            <button type="button" class="btn btn--secondary btn--sm" @onclick="HandleRetry">Try again</button>
        }
    </div>
}

@code {
    [Parameter] public string? Message { get; set; }
    [Parameter] public bool ShowRetry { get; set; } = true;
    [Parameter] public EventCallback OnRetry { get; set; }

    private void HandleRetry() => OnRetry.InvokeAsync();
}
